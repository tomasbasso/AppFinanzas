<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AppFinanzas.Mvvm.ViewModels"
             xmlns:local="clr-namespace:AppFinanzas.Mvvm.Views"
             x:Class="AppFinanzas.Mvvm.Views.MetasAhorroPage"
             Title="Metas de Ahorro">

    <StackLayout Padding="20">
        <Label Text="Metas de ahorro" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center"
               Margin="0,10" />
        <Button Text="Nueva Meta" Command="{Binding IrANuevaCommand}" />
        <Button Text="Volver" Command="{Binding VolverCommand}"
                BackgroundColor="LightGray" TextColor="Black"
                CornerRadius="10" HeightRequest="50" />
        <ScrollView>
            <CollectionView ItemsSource="{Binding MetasAhorro}" Margin="0,10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" CornerRadius="8" Padding="10" Margin="0,5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Nombre}" FontSize="18" FontAttributes="Bold" />
                            <Label Text="{Binding MontoObjetivo, StringFormat='Objetivo: {0:C}'}" />
                            <Label Text="{Binding ProgresoActual, StringFormat='Progreso: {0:C}'}" />
                            <Label Text="{Binding FechaLimite, StringFormat='Hasta: {0:dd/MM/yyyy}'}" />

                            <!-- Botones de Editar y Eliminar -->
                            <Grid ColumnDefinitions="*,*" Margin="0,10,0,0">
                                <Button Text="Editar" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MetasAhorroViewModel}}, Path=EditarCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#3498db"
                                        TextColor="White"
                                        CornerRadius="5"
                                        Margin="0,0,5,0"
                                        Grid.Column="0"/>

                                <Button Text="Eliminar" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MetasAhorroViewModel}}, Path=EliminarCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#e74c3c"
                                        TextColor="White"
                                        CornerRadius="5"
                                        Margin="5,0,0,0"
                                        Grid.Column="1"/>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
            </ScrollView>
    </StackLayout>
</ContentPage>