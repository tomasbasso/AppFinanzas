<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AppFinanzas.Mvvm.ViewModels"
             x:Name="gestionUsuariosPage"
             x:Class="AppFinanzas.Mvvm.Views.GestionUsuariosPage"
             NavigationPage.HasNavigationBar="False"
             Title="Gestión de Usuarios"
             BackgroundColor="#25241f">

    <!-- Acá seteás el ViewModel -->
    <ContentPage.BindingContext>
        <viewModels:UsuarioViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

           
            <Label Text="Gestión de Usuarios (Solo administradores)" 
             FontSize="28" TextColor="#caa755" HorizontalOptions="Center" />

            <!-- Botón para agregar usuario -->
            <Button Text="Agregar Usuario" 
              Command="{Binding IrANuevoCommand}"
              BackgroundColor="#caa755"
              TextColor="Black"
              CornerRadius="10"
              Margin="0,0,0,10"/>

            <!-- ← Volver -->
            <Button Text="← Volver"
              Command="{Binding VolverCommand}"
              BackgroundColor="Transparent"
              TextColor="#caa755"
              FontSize="18"
              HorizontalOptions="Start"
              Margin="0,0,0,10"/>


            <!-- Lista de usuarios -->
            <CollectionView ItemsSource="{Binding Usuarios}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#35332f" CornerRadius="10" Padding="14" Margin="0,4">
                            <Grid ColumnDefinitions="*,Auto,Auto">
                                <VerticalStackLayout>
                                    <Label Text="{Binding Nombre}" FontSize="20" TextColor="White" />
                                    <Label Text="{Binding Email}" FontSize="13" TextColor="#bdbdbd" />
                                    <Label Text="{Binding Rol}" FontSize="13" TextColor="#caa755" />
                                </VerticalStackLayout>
                                <Button Text="Editar"
                        Command="{Binding BindingContext.EditarCommand, Source={x:Reference gestionUsuariosPage}}"
                        CommandParameter="{Binding .}"
                        BackgroundColor="#caa755"
                        TextColor="Black"
                        Grid.Column="1"
                        Margin="5,0"
                        CornerRadius="8" />
                                <Button Text="Eliminar"
                        Command="{Binding BindingContext.EliminarCommand, Source={x:Reference gestionUsuariosPage}}"
                        CommandParameter="{Binding .}"
                        BackgroundColor="Red"
                        TextColor="White"
                        Grid.Column="2"
                        Margin="5,0"
                        CornerRadius="8" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
